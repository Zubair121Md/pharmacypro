# Production Environment Configuration
# Pharmacy Revenue Management System

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pharmacy_revenue
DB_USER=pharmacy_user
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://pharmacy_user:your_secure_database_password_here@postgres:5432/pharmacy_revenue

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# Security
SECRET_KEY=your_very_secure_secret_key_here_minimum_32_characters
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["https://pharmacy-revenue.com", "https://www.pharmacy-revenue.com"]
CORS_ALLOW_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=xlsx,csv
UPLOAD_DIR=/app/uploads

# ML Models
ML_MODELS_DIR=/app/models
ML_CACHE_TTL=3600

# Backup Configuration
BACKUP_DIR=/app/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your_grafana_password_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# Logging
LOG_FILE_PATH=/app/logs/application.log
ERROR_LOG_PATH=/app/logs/error.log
AUDIT_LOG_PATH=/app/logs/audit.log
SECURITY_LOG_PATH=/app/logs/security.log

# Performance
WORKERS=4
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_VERIFY_CLIENT=off

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Feature Flags
ENABLE_ML_MODELS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_BACKUP_AUTOMATION=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true
